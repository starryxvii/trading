{
  "mode": "backtest",
  "symbol": "BTC-USD",
  "interval": "5m",
  "period": "60d",

  "equity": 10000,
  "riskPct": 0.75,
  "rr": 2.0,

  "slippageBps": 1,
  "feeBps": 0,

  "report": {
    "exportCsv": true,
    "outDir": "output"
  },

  "oco": {
    "mode": "intrabar",
    "tieBreak": "pessimistic",
    "clampStops": true,
    "clampEpsBps": 0.25
  },
  "triggerMode": "intrabar",
  "flattenAtClose": true,

  "scaleOutAtR": 1.2,
  "scaleOutFrac": 0.35,
  "finalTP_R": 4.2,

  "maxDailyLossPct": 2.0,

  "atrTrailMult": 0,
  "atrTrailPeriod": 14,

  "mfeTrail": { "enabled": true, "armR": 2.4, "givebackR": 0.6 },

  "pyramiding": { "enabled": false },

  "volScale": {
    "enabled": true,
    "atrPeriod": 14,
    "cutIfAtrX": 1.35,
    "cutFrac": 0.40,
    "noCutAboveR": 2.2
  },

  "backtest": {
    "dailyMaxTrades": 0,
    "postLossCooldownBars": 0,
    "entryChase": { "enabled": true, "afterBars": 2, "maxSlipR": 0.20, "convertOnExpiry": false }
  },

  "position": {
    "qtyStep": 0.001,
    "minQty": 0.001,
    "maxLeverage": 2.0
  },

  "maxConcurrentTrades": 1,

  "broker": {
    "maxHoldMinLive": null,
    "flattenWeekends": false,
    "flattenFridayHourUTC": 21
  },

  "strategy": "ultra",

  "ultra": {
    "preset": "tight",
    "debug": true,
    "useSessionWindows": true,

    "imbalanceLookback": 30,
    "sweepTolBps": 2.5,
    "minAtrBps": 3,
    "pdToleranceBps": 12,

    "usePD": true,
    "useOTE": true,
    "oteLo": 0.5,
    "oteHi": 0.82,

    "bias": {
      "enabled": true,
      "gate": "strict",
      "emaPeriod": 50,
      "slopeBps": 1,
      "htf4h": 240,
      "htf1h": 60,
      "fallback15m": 15,
      "bandBps": 8
    },
    "allowStrongSetupOverNeutralBias": false,

    "confluence": {
      "minScore": 4,
      "sweepPts": 1,
      "imbPts": 1,
      "bosPts": 1,
      "pdPts": 0,
      "otePts": 1,
      "htfPts": 1
    },

    "entryMode": "edge",
    "entryExpiryBars": 5,
    "rr": 2.0,
    "atrPeriod": 14,
    "atrMult": 1.1,
    "minStopBps": 6,
    "breakevenAtR": 1.0,
    "trailAfterR": 1.9,
    "cooldownBars": 8,

    "fvgMinBps": 2.5,
    "minBodyAtr": 0.4
  }
}
