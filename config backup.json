{
  "mode": "backtest",
  "symbol": "BTC-USD",
  "interval": "5m",
  "period": "60d",

  "equity": 10000,
  "riskPct": 0.18,
  "rr": 1.8,

  "slippageBps": 2,
  "feeBps": 0,

  "report": { "exportCsv": true, "outDir": "output" },

  "oco": {
    "mode": "intrabar",
    "tieBreak": "pessimistic",
    "clampStops": true,
    "clampEpsBps": 0.25
  },
  "triggerMode": "intrabar",
  "flattenAtClose": false,

  "scaleOutAtR": 1.0,
  "scaleOutFrac": 0.33,
  "finalTP_R": 3.5,

  "maxDailyLossPct": 1.0,

  "atrTrailMult": 0.45,
  "atrTrailPeriod": 14,

  "mfeTrail": { "enabled": true, "armR": 1.6, "givebackR": 0.4 },

  "pyramiding": { "enabled": false },

  "volScale": {
    "enabled": true,
    "atrPeriod": 14,
    "cutIfAtrX": 1.45,
    "cutFrac": 0.33,
    "noCutAboveR": 2.2
  },

  "backtest": {
    "dailyMaxTrades": 12,
    "postLossCooldownBars": 12,
    "entryChase": {
      "enabled": true,
      "afterBars": 1,
      "maxSlipR": 0.12,
      "convertOnExpiry": false
    }
  },

  "position": { "qtyStep": 0.001, "minQty": 0.001, "maxLeverage": 2.0 },
  "maxConcurrentTrades": 1,
  "broker": {
    "maxHoldMinLive": null,
    "flattenWeekends": false,
    "flattenFridayHourUTC": 21
  },

  "strategy": "ultra",

  "ultra": {
    "preset": "crypto",
    "debug": true,

    "useSessionWindows": true,
    "killzones": "00:00-06:00,07:00-12:00,13:00-18:00",
    "firstMinGuard": 1,
    "lastMinGuard": 1,

    "lookback": 250,
    "imbalanceLookback": 40,
    "sweepTolBps": 2.5,
    "minAtrBps": 5.2,
    "pdToleranceBps": 60,

    "preferIFVG": true,
    "requireMicroBOS": false,
    "requireSweep": true,
    "usePD": false,
    "useOTE": true,
    "oteLo": 0.7,
    "oteHi": 0.82,

    "bias": {
      "enabled": true,
      "gate": "strict",
      "emaPeriod": 50,
      "slopeBps": 1,
      "htf4h": 240,
      "htf1h": 60,
      "fallback15m": 15,
      "bandBps": 8
    },
    "allowStrongSetupOverNeutralBias": true,

    "confluence": {
      "minScore": 3,
      "sweepPts": 1,
      "imbPts": 1,
      "bosPts": 0,
      "htfPts": 2,
      "otePts": 1
    },

    "entryMode": "edge",
    "entryExpiryBars": 6,
    "rr": 2.0,
    "atrPeriod": 14,
    "atrMult": 1.8,
    "minStopBps": 10,
    "breakevenAtR": 0.8,
    "trailAfterR": 1.6,
    "cooldownBars": 8,

    "wickRejection": {
      "enabled": false,
      "minWickAtr": 0.45,
      "requirePierce": true,
      "requireBodyDir": true
    },

    "fvgMinBps": 7.2,
    "minBodyAtr": 0.90,
    "needFvgAtr": 0.65,

    "tpMode": "hybrid",
    "rrMinForKey": 1.2,

    "sessionLevels": [
      { "name": "Asia", "startMin": 0, "endMin": 300 },
      { "name": "London", "startMin": 480, "endMin": 780 },
      { "name": "NewYork", "startMin": 780, "endMin": 1260 }
    ],
    "allowImbalanceFallbackOnNeutral": false,

    "microBosLookback": 28,
    "microBosLookbackNosweep": 36
  },

  "reanchorStopOnFill": true,
  "maxSlipROnFill": 0.25
}